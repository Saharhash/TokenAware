{
  "manifest_version": 2,
  "name": "TokenAware",
  "description": "Count tokens in OpenAI's Playground, 100% client side and secure. For feedback: saharmor.info",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icon/favicon.ico",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/favicon-16x16.png",
    "48": "icon/favicon-32x32.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://*.beta.openai.com/playground*"
      ],
      "js": [
        "jquery-2.2.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}